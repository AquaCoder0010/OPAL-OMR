{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\src\\*.cpp",
                "-o",
                "${workspaceFolder}\\bin\\Application.exe",
                "-I",
                "${workspaceFolder}\\src\\include",

                // opencv 
                "-I",
                "C:\\libs\\opencv-4.5.5\\install\\include",
                "-L",
                "C:\\libs\\opencv-4.5.5\\lib",
                "-lopencv_core455",
                "-lopencv_highgui455",
                "-lopencv_imgproc455",
                "-lopencv_imgcodecs455",
                "-lopencv_video455",
                "-lopencv_videoio455",
            ],  
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}